use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function mjm_components_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the mjm_components module.
    case 'help.page.mjm_components':
      $output = '';
      $output .= '<h3>' . \Drupal::translation()->translate('About') . '</h3>';
      $output .= '<p>' . \Drupal::translation()->translate('Custom components for MJM Layout Builder including cards and virtual tours') . '</p>';
      return $output;

    default:
  }
}

