/**
 * Implements hook_preprocess_html().
 */
function mjm_components_preprocess_html(&$variables) {
  // Add font optimization inline styles to head to prevent preload warnings
  $variables['#attached']['html_head'][] = [
    [
      '#type' => 'html_tag',
      '#tag' => 'style',
      '#value' => '
        /* Force immediate use of preloaded Lora font to prevent warnings */
        body {
          font-family: Lora, Georgia, "Times New Roman", serif;
        }
        
        /* Apply Lora to content areas immediately */
        .layout-content,
        .mjm-card,
        .mjm-feature-card,
        h1, h2, h3, h4, h5, h6 {
          font-family: Lora, Georgia, "Times New Roman", serif;
        }
      ',
    ],
    'mjm-font-optimization'
  ];
}

/**
 * Implements hook_page_attachments_alter().
 */
function mjm_components_page_attachments_alter(array &$attachments) {
  // Add font optimization JavaScript
  $attachments['#attached']['library'][] = 'mjm_components/font-optimization';
}

/**
 * Implements hook_page_attachments().
 */
function mjm_components_page_attachments(array &$attachments) {
  $attachments['#attached']['library'][] = 'mjm_components/mjm_components';
  $attachments['#attached']['library'][] = 'mjm_components/site-header-override';
}
